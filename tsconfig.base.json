{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@chimp-stack/core": ["packages/chimp-core/src/index.ts"],
      "@chimp-stack/core/config": ["packages/chimp-core/src/config.ts"],
      "@chimp-stack/core/env": ["packages/chimp-core/src/env.ts"],
      "@chimp-stack/core/types/config": ["packages/chimp-core/src/types/config.ts"],
      "@chimp-stack/core/cli/addChimpConfigCommand": ["packages/chimp-core/src/cli/addChimpConfigCommand.ts"],
      "@chimp-stack/core/cli/config": ["packages/chimp-core/src/cli/config.ts"],
      "@chimp-stack/core/cli/init": ["packages/chimp-core/src/cli/init.ts"],
      "@chimp-stack/core/utils/changelog": ["packages/chimp-core/src/utils/changelog/index.ts"],
      "@chimp-stack/core/utils/logger": ["packages/chimp-core/src/utils/logger.ts"],
      "@chimp-stack/core/utils/openai": ["packages/chimp-core/src/utils/openai.ts"]
    }
  }
}
